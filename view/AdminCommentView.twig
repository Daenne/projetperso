{% extends "gabarit.twig" %}
{% block content %}
{% include 'AdminTemplate.twig' %}
<div class="container">
  <div class="card-box">  
    {% for comment in comments %}
        <header class="card-header">
            <p class="card-header-title">
                <strong>{{comment.author}}</strong>
            </p>
        </header>
        <div class="card-content box">
            <div class="content">
                le {{comment.date_create}}
                <br>
                {{comment.comment}}
            </div>
            <p class="is-warning">
            {% if comment.warning == 0 %} 
                Nothing
            {% else %}
               <strong>Signal√©</strong>
               {{comment.warning}}
            {% endif %}
            </p><br/>
            <a class="button is-success" href="{{HOST}}validComment/id/{{comment.id}}">Valider</a>
            <a class="button is-danger" href="{{HOST}}deleteComment/id/{{comment.id}}">Supprimer</a> 
        </div>
    {% endfor %}
  </div>
</div>
{% endblock %}