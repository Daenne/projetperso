{% extends "gabarit.twig" %}
{% block content %}
<h1 class="title has-text-centered">Contact</h1>
<div class="columns is-mobile is-centered">
	<div class="column is-half">
		<form method="post" action="{{HOST}}mailSend">
			<div class="control">
				<div class="field">
				<label class="label" for="name">Nom : </label>
				<input class="input" type="text" name="user_name">
			</div>
			</div>
			<div class="control">
				<div class="field">
				<label class="label" for="mail">E-mail : </label>
				<input class="input" type="email" name="user_mail">
			</div>
			</div>
			<div class="control">
				<div class="field">
				<label class="label" for="message">Message : </label>
				<textarea class="textarea" name="user_message"></textarea><br/>
			</div>
			</div>
			<div class="control">
				<div class="field">
				<div class="control">
		    		<button class="button is-info">Envoyer</button>
		  		</div>
			</div>
			</div>
		</form>
	</div>
</div>
{% endblock %}